pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/umerBlueiris/nodejsbanking.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                // Run the build script defined in package.json
                sh 'npm run build'
            }
        }
    } // Closing brace for stages block
} // Closing brace for pipeline block

